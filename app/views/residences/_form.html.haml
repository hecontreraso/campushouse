= form_for @residence do |f|
  - if @residence.errors.any?
    #error_explanation
      %h2= "#{pluralize(@residence.errors.count, "error")} prohibited this residence from being saved:"
      %ul
        - @residence.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :square_meters
    = f.number_field :square_meters
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :rooms
    = f.number_field :rooms
  .actions
    = f.submit 'Guardar'
