#SignIn.modal.fade{:role => "dialog"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        / %button.close{"data-dismiss" => "modal", :type => "button"} ×
        %h4 Log in
      .modal-body
        = form_for(student_resource, as: student_resource_name,
          url: session_path(student_resource_name), html: {role: 'form'}) do |f|
          .form-group
            = f.email_field :email, class: 'form-control', placeholder: 'Correo electrónico', autofocus: true
          .form-group
            = f.password_field :password, class: 'form-control', placeholder: 'Contraseña', autocomplete: "off"
          - if student_devise_mapping.rememberable?
            .checkbox
              %label
                = f.check_box :remember_me
                Recordarme
          - if student_devise_mapping.recoverable?
            .checkbox.alignright
              = link_to "¿Has olvidado tu contraseña?", new_password_path(student_resource_name)
          = f.submit "Iniciar sesión", class: 'btn btn-conf-2 btn-green btn-block'
      .modal-footer
        - if student_devise_mapping.registerable?
          ¿No tienes una cuenta?
          = link_to "Regístrate", new_registration_path(student_resource_name)
          %br/
