- if controller_name != 'sessions'
  = link_to "Log in", new_session_path(:student)
  %br/
- if student_devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "Sign up", new_registration_path(:student)
  %br/
- if student_devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Didn't receive confirmation instructions?", new_confirmation_path(:student)
  %br/
- if student_devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "Didn't receive unlock instructions?", new_unlock_path(:student)
  %br/
- if student_devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(:student, provider)
    %br/

