= javascript_include_tag 'https://maps.googleapis.com/maps/api/js'
= javascript_include_tag 'jquery.twbsPagination'
= stylesheet_link_tag 'freshstyle'
= javascript_include_tag 'freshslider.1.0.0'

= javascript_tag do
	window.map_latitude = '#{@map_latitude}'
	window.map_longitude = '#{@map_longitude}'

	window.residences = JSON.parse('#{raw @residences}')
	window.university = JSON.parse('#{raw @university.to_json}')

	window.residence_marker_url = "#{image_url('map-marker.png')}"
	window.residence_marker_gray_url = "#{image_url('map-marker-gray.png')}"
	
	window.university_marker_url = "#{image_url('university-marker.png')}"
