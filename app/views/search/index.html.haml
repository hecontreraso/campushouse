.container-fluid.fill
	.row.fill
		.col-md-7.vertical-scroll
			%br	
			%section.row
				.col-lg-3.col-md-12
					.form-group
						Rango de precios
				.col-lg-9.col-md-12
					#price
			%section.row.residences

			%ul#pagination.pagination-sm
		.col-md-5.fill.nopadding
			%section#map

%article#residence_template.col-sm-12.col-md-6{ hidden: true }
	.image-wrapper
		= image_tag "", alt: nil, class: "img-responsive"
	.description-wrapper
		.text-description-wrapper
			.residence-title
			.private-room
				Habitaci√≥n privada
		.favorite-price-wrapper
			%i.fa.fa-heart.fa-2x
				&nbsp;
			%span.price

= javascript_include_tag 'https://maps.googleapis.com/maps/api/js'
= javascript_include_tag 'jquery.twbsPagination'
= stylesheet_link_tag 'ion.rangeSlider'
= stylesheet_link_tag 'ion.rangeSlider.skinFlat'
= javascript_include_tag 'ion.rangeSlider'

= javascript_tag do
	window.map_latitude = '#{@map_latitude}'
	window.map_longitude = '#{@map_longitude}'

	window.residences = JSON.parse('#{raw @residences}')
	window.university = JSON.parse('#{raw @university.to_json}')

	window.search_ajax_path = '#{search_ajax_path}'
	window.min_search_price = '#{@min_search_price}'
	window.max_search_price = '#{@max_search_price}'
	window.itemsPerPage = parseInt('#{@items_per_page}')

	window.residence_marker_url = "#{image_url('map-marker.png')}"
	window.residence_marker_hover_url = "#{image_url('map-marker-hover.png')}"
	window.residence_marker_visited_url = "#{image_url('map-marker-visited.png')}"
	window.university_marker_url = "#{image_url('university-marker.png')}"
